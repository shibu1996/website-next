{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/themes/*": [
        "./themes/*"
      ],
      "@/components/*": [
        "./components/*",
        "./themes/multicolor/components/*",
        "./themes/modern/components/*"
      ],
      "@/hooks/*": [
        "./hooks/*",
        "./themes/multicolor/hooks/*",
        "./themes/modern/hooks/*"
      ],
      "@/lib/*": [
        "./themes/multicolor/lib/*",
        "./themes/modern/lib/*"
      ],
      "@/utils/*": [
        "./themes/multicolor/utils/*",
        "./themes/modern/utils/*"
      ],
      "@/extras/*": [
        "./extras/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "themes/multicolor/App.tsx",
    "themes/multicolor/main.tsx",
    "themes/multicolor/components/ui/**/*.tsx"
  ]
}
